<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:background="@color/black"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@color/gray_custom"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgPicService"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@mipmap/barbershop"/>
        <TextView
            android:id="@+id/title_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="15dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="Tiêu đề"
            android:textColor="#FF0000"
            />
        <TextView
            android:id="@+id/serviceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="10dp"
            android:text="Description Description DescriptionDescription"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/priceService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="17dp"
            android:text="20"
            android:textColor="@color/green_custom"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAddService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/green_custom"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="Chọn dịch vụ"
                android:textColor="@color/black_custom"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>